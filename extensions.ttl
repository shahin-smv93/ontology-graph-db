@prefix owl:    <http://www.w3.org/2002/07/owl#> .
@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms:<http://purl.org/dc/terms/> .
@prefix saref:  <https://saref.etsi.org/core/> .
@prefix s4watr: <https://saref.etsi.org/saref4watr/> .
@prefix time:   <http://www.w3.org/2006/time#> .
@prefix qudt:   <http://qudt.org/vocab/unit/> .
@prefix bigg:   <http://bigg-project.eu/ld/ontology#> .
@prefix schema: <https://schema.org/> .

###############################################################################
# 1. Require all Sensors to have an identifier
###############################################################################
saref:Sensor
  rdfs:subClassOf [
    a                owl:Restriction ;
    owl:onProperty   dcterms:identifier ;
    owl:someValuesFrom rdfs:Literal
  ] .

###############################################################################
# 2. Default min/max values for sensors
###############################################################################
bigg:hasDefaultMin
  a           owl:DatatypeProperty ;
  rdfs:isDefinedBy bigg: ;
  rdfs:domain saref:Sensor ;
  rdfs:range  xsd:float ;
  rdfs:label  "Has default minimum value"@en ;
  rdfs:comment
    "The default minimum value for a sensor’s measurements."@en .

bigg:hasDefaultMax
  a           owl:DatatypeProperty ;
  rdfs:isDefinedBy bigg: ;
  rdfs:domain saref:Sensor ;
  rdfs:range  xsd:float ;
  rdfs:label  "Has default maximum value"@en ;
  rdfs:comment
    "The default maximum value for a sensor’s measurements."@en .

