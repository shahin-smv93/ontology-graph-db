###############################################################################
# 5. Serial Number for Devices
###############################################################################
schema:serialNumber
  a           owl:DatatypeProperty ;
  rdfs:isDefinedBy schema: ;
  rdfs:domain saref:Device ;
  rdfs:range  xsd:string ;
  rdfs:label  "Serial Number"@en ;
  rdfs:comment
    "The serial number or manufacturer-assigned identifier for a device."@en .